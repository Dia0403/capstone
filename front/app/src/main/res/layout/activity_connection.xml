<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연동할 정보를\n입력해주세요."
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 역할 체크박스 -->
        <CheckBox
            android:id="@+id/checkGuardian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보호자"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"/>

        <CheckBox
            android:id="@+id/checkWard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="피보호자"
            app:layout_constraintTop_toTopOf="@id/checkGuardian"
            app:layout_constraintStart_toEndOf="@id/checkGuardian"
            android:layout_marginStart="16dp"/>

        <!-- 보호자 성함 -->
        <TextView
            android:id="@+id/labelGuardian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보호자 성함"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/checkGuardian"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"/>

        <EditText
            android:id="@+id/editTextGuardian"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="보호자 성함을 입력하세요.."
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/labelGuardian"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- 피보호자 성함 -->
        <TextView
            android:id="@+id/labelWard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="피보호자 성함"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/editTextGuardian"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"/>

        <EditText
            android:id="@+id/editTextWard"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="피보호자 성함을 입력하세요.."
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/labelWard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- 전화번호 -->
        <TextView
            android:id="@+id/labelPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상대방 전화번호"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/editTextWard"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"/>

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="전화번호를 입력하세요.."
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/labelPhone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- 연동하기 버튼 -->
        <Button
            android:id="@+id/btnConnect"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="연동하기"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/editTextPhone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
